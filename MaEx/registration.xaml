<Window x:Class="MaEx.registration"
       
      
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="300" Width="400">
    <Grid>
        <TextBlock Text="Login In" FontSize="20" HorizontalAlignment="Center" Margin="0,20,0,0" />

        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,50,0,0">
            <TextBox x:Name="UsernameTextBox" Width="200" Margin="0,5,0,5" Text="Username" GotFocus="TextBox_GotFocus" LostFocus="TextBox_LostFocus"/>
            <TextBox x:Name="PasswordTextBox" Width="200" Margin="0,5,0,5" Text="Password" GotFocus="TextBox_GotFocus" LostFocus="TextBox_LostFocus"/>

            <Button Content="Login" Width="100" Click="LoginButton_Click" />
        </StackPanel>
    </Grid>
</Window>
